                <h2 class="h5 mb-0"><a href="#" class="text-muted"></a> Order #16123222</h2>
              </div>
            
              <!-- Main content -->
              <div class="row">
                <div class="col-lg-8">
                  <!-- Details -->
                  <div class="card mb-4">
                    <div class="card-body">
                      <div class="mb-3 d-flex justify-content-between">
                        <div>
                          <span class="me-3"><%= orderData.date %></span>
                          <span class="me-3">#16123222</span>
                          <span class="me-3"><%= orderData.paymentMethod %></span>
                          
                          
                          
                        </div>
                        <div class="d-flex">
                          <button class="btn p-0 me-3 d-none d-lg-block btn-icon-text"><i class="bi bi-download"></i> <span class="text">Invoice</span></button>
                          <div class="dropdown">
                            <button class="btn btn-link p-0 text-muted" type="button" data-bs-toggle="dropdown">
                              <i class="bi bi-three-dots-vertical"></i>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end">
                              <li><a class="dropdown-item" href="#"><i class="bi bi-pencil"></i> Edit</a></li>
                              <li><a class="dropdown-item" href="#"><i class="bi bi-printer"></i> Print</a></li>
                            </ul>
                          </div>
                        </div>
                      </div>
                      <% let sumtot = 0 %>
                      <% if (orderData && orderData.items.length>=0) { %>
                        <% for(let i=0;i<orderData.items.length;i++){ %>

                        <!-- <%= sumtot += orderData.items[i].total_price %> -->
                      <table class="table table-borderless">
                        <tbody>
                           
                          <tr>
                            <td>
                              <div class="d-flex mb-2">
                                <div class="flex-shrink-0">
                                  <img src="<%= orderData.items[i].product_id.images[0] %>" alt="" width="35" class="img-fluid">
                                </div>
                                <div class="flex-lg-grow-1 ms-3">
                                    
                                  <h6 class="small mb-0"><a href="#" class="text-reset"><%= orderData.items[i].product_id.name %></a></h6>
                                  <!-- <span class="small">Color: Black</span> -->
                                </div>
                                
                              </div>
                              
                            </td>
                            
                            <td>x<%= orderData.items[i].quantity %></td>
                            <td><span class="badge rounded-pill bg-info"><%= orderData.items[i].status %></span></td>
                            <td class="text-end">₹<%= orderData.items[i].total_price %>.00</td>
                          </tr>
                          <% } %>
                          <% } %>
                          
                        </tbody>
                        <tfoot>
                          <tr>
                            <td colspan="2">Subtotal</td>
                            <td class="text-end">₹<%= orderData.reducedTotal %>.00</td>
                          </tr>
                          <!-- <tr>
                            <td colspan="2">Shipping</td>
                            <td class="text-end">$20.00</td>
                          </tr> -->
                          <!-- <tr>
                            <td colspan="2">Discount (Code: NEWYEAR)</td>
                            <td class="text-danger text-end">-$10.00</td>
                          </tr> -->
                          <tr class="fw-bold">
                            <td colspan="2">TOTAL</td>
                            <td class="text-end">₹<%= orderData.reducedTotal %>.00</td>
                          </tr>
                        </tfoot>
                      </table>
                      
               

                    </div>
                  </div>
