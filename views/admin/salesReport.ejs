        function findReport(event) {
    event.preventDefault();

    const startDate = document.getElementById('startdate').value;
    const endDate = document.getElementById('enddate').value;

    document.getElementById('dateError').innerText = "";

    let isValid = true;

    if (startDate === "" || endDate === "" || (startDate === "" && endDate === "")) {
        document.getElementById('dateError').innerText = "Please select a date!";
        isValid = false;
        return false;
    }

    if (isValid) {
        fetch(`/admin/salesReport?sd=${startDate}&ed=${endDate}`, {
            method: 'GET',
            headers: {
                'Content-Type': 'application/json',
                // Add any additional headers if needed
            },
        }).then(response => {
            return response.json();
        }).then(data => {
            if (data.orderFilter === true) {
                const { order } = data;
                const listdiv = document.getElementById('listdiv');
                let html = '';
                let no = 1;
                let salesAmount = 0 
                let salesCount = 0
                for (let i = order.length - 1; i >= 0; i--) {
                    order[i].items.forEach((orderItem) => {
                        if (orderItem.status === 'delivered') {
                            html += `
                                <tr>
                                    <td>${no++}</td>
                                    <td><b>${order[i]._id}</b></td>
                                    <td>${order[i].userId.username}</td>`;

                            if (order[i].userId) {
                                html += `<td>${order[i].userId.email}</td>`;
                            } else {
                                html += `<td>User Not Found</td>`;
                            }

                            html += `<td>${orderItem.product_id.name}</td>
                                <td>${order[i].userId.mobile}</td>
                                <td>${order[i].paymentMethod.toUpperCase()}</td>
                                <td>${order[i].date}</td>
                                <td>₹${orderItem.total_price}.00</td>
                            </tr>`;
                        }
                        salesAmount += orderItem.total_price
                    });
                }
                // Append the HTML to the listdiv or do whatever you want with it
                listdiv.innerHTML = html;
                document.getElementById('salesAmount').innerText = `₹${salesAmount}.00`
                document.getElementById('salesCount').innerText = order.length
            }
        }).catch(error => {
            console.error('Error:', error);
        });
    }
}


