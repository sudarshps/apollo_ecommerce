                                        <th>Mobile</th>
                                        <th>Status</th>
                                        <th class="text-end">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% for(let i=0;i<users.length;i++){ %>

                                    <tr>   
                                        <td><%= i+1 %></td>
                                        <td><h6 class="mb-0 title"><%= users[i].username %></h6></td>
                                        <td><%= users[i].email %></td>
                                        <td><%= users[i].mobile %></td>
                                        <td><% if(users[i].isBlocked===false){ %>
                                            <span class="text-success">Active</span></td>
                                        
                                        <%} else{ %>
                                            <span class="text-danger">Blocked</span></td>
                                            <% } %>
