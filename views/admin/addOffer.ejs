        document.getElementById('offerForm').addEventListener('submit', function (event) {
            event.preventDefault(); 


            const offerName = document.getElementById('offerName').value.trim()
                    const percent = document.getElementById('percentage').value.trim()
                    const startingDateInput = document.getElementById('startingDate').value.trim()
                    const expiry = document.getElementById('expiryDate').value.trim()

               

                    document.getElementById('percentError').innerHTML=''
                    document.getElementById('nameError').innerHTML=''
                    document.getElementById('startingError').innerHTML=''
                    document.getElementById('expiryError').innerHTML=''

                  var isValid = true

                    const nameRegex = /^[a-zA-Z][a-zA-Z0-9 ]*$/;

                    if (!nameRegex.test(offerName)) {
                    document.getElementById('nameError').innerHTML = 'Name should only contain alphabets'
                    isValid = false;
                     } 


                     const currentDate = new Date()
                     const expiryDate = new Date(expiry)

                     if(expiryDate<=currentDate){
                      document.getElementById('expiryError').innerHTML = 'Expiry date must be a future date!'
                      isValid = false
                     }

                     if(startingDateInput>expiry){
                      document.getElementById('expiryError').innerHTML = 'Expiry date should not lesser than the starting date!'
                      isValid = false
                     }

                     
                     const offerStartingDate = new Date(startingDateInput)

                     const currentDateMilliseconds = currentDate.getTime();
                      const offerStartingDateMilliseconds = offerStartingDate.getTime();

                     if(currentDateMilliseconds>=offerStartingDateMilliseconds){
                      document.getElementById('startingError').innerHTML = 'Starting date must be the current date or future date!'
                      isValid= false
                     }



                     const numericRegex = /^(100|[1-9]\d{0,1})$/;

                 if (!numericRegex.test(percent)) {
                  
                    document.getElementById('percentError').innerHTML = 'This Field should only contain value between 1 to 100!'
                    isValid= false
                     } 



                     var verifyData = $('#offer-form').serialize();

if (!isValid) {
  return false;
} else {


            
            const formData = new FormData(this);

           
            fetch(this.action, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                },
                body: new URLSearchParams(formData),
            })
                .then(response => response.json()) 
                .then(data => {
                    if (data.success) {
                        
                        Swal.fire({
                            icon: 'success',
                            title: 'Success!',
                            text: 'Offer added successfully!'
                        }).then(() => {
                            
