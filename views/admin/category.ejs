<script>

    function addCategory(event){
        event.preventDefault()

        const name = document.getElementById('product_name').value.trim()
        const description = document.getElementById('desc').value.trim()

        document.getElementById('nameError').innerText = ''
        document.getElementById('descError').innerText = ''

        isValid = true

        var nameRegex = /^[a-zA-Z]+$/;

        if(!nameRegex.test(name)){
            document.getElementById('nameError').innerText = 'Name should only contain alphabets!'
            isValid = false
        }


        if(!isValid){
            return false
        }else{
            $.ajax({
            url:'/admin/category',
            method:'post',
            data:{name,description},
            success:((response)=>{
                if(response.success){
                    Swal.fire({
            title: 'Success!',
            text: 'Category added successfully',
             icon: 'success',
            confirmButtonText: 'OK',
            }).then((result)=>{
                if(result.isConfirmed){
                   
                    window.location.reload()
                }
            })
                }else if(response.existCategory){
                    Swal.fire({
  icon: "error",
  title: "Oops...",
  text: response.message,
}).then((result)=>{
                if(result.isConfirmed){
                   
                    window.location.reload()
                }
            })
                }
                
                
                
                else{
                    Swal.fire({
  icon: "error",
  title: "Oops...",
  text: 'Something went wrong!',
});
                }
            })
        })
        }

        

    }





    function dltctg(){
           const btn =  document.getElementById('dltbtn')
            btn.addEventListener('click',(()=>{
                alert('delete successful')
            }))
    }
    dltctg()


    //offer modal


    $('#offerModal').on('shown.bs.modal', function (e) {
    var productId = $(e.relatedTarget).data('productid');
    $('#offerModal').data('productId', productId);
});


function applyOffer(event,offerId){
        event.preventDefault()
        var categoryId = $('#offerModal').data('productId');
        $.ajax({
            url:'/admin/addCategoryOffer',
            method:'post',
            data:{offerId,categoryId},
            success:((response)=>{
                if(response.success){
                    Swal.fire({
            title: 'Success!',
            text: 'Offer added successfully',
             icon: 'success',
            confirmButtonText: 'OK',
            }).then((result)=>{
                if(result.isConfirmed){
                    $('#offerModal').modal('hide');
                    window.location.reload()
                }
            })
                }else{
                    Swal.fire({
  icon: "error",
  title: "Oops...",
  text: "Something went wrong!",
});
                }
            })
        })

    }



    function removeCategoryOffer(event, categoryId) {
    event.preventDefault();
    $.ajax({
        url: '/admin/removeCategoryOffer',
        method: 'post',
        data: { categoryId },
        success: function(response) { 
            if (response.success) {
                Swal.fire({
                    title: 'Success!',
                    text: 'Offer Removed successfully',
                    icon: 'success',
                    confirmButtonText: 'OK',
                }).then((result) => {
                    if (result.isConfirmed) {
                        window.location.reload();
                    }
                });
            } else {
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: 'Something went wrong!',
                });
            }
        }
    });
}


</script>