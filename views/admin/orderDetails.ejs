        <main class="main-wrap">
            
                
            <section class="content-main">
                <div class="content-header">
                    <div>
                        
                        <h2 class="content-title card-title">Order Details</h2>
                        <p class="text-dark">#ID: <%= order._id %></p>
                        
                    </div>
                    <!-- <div>
                        <input type="text" placeholder="Search order ID" class="form-control bg-white" />
                    </div> -->
                </div>
                <% if(order && order.items.length>0) { %>
                    <% order.items.forEach((orderItem)=>{ %>
                        


                        <% 
                                        let itemPrice = orderItem.product_id.price;
                                        if( orderItem.product_id.offer &&  orderItem.product_id.categoryId.offer){
             
                                      itemPrice -= (itemPrice * orderItem.product_id.offer.percentage / 100);
             
                                      } else if( orderItem.product_id.categoryId.offer){
             
                                    itemPrice -= (itemPrice *  orderItem.product_id.categoryId.offer.percentage / 100);
             
                                     } else if( orderItem.product_id.offer){
             
                                      itemPrice -= (itemPrice *  orderItem.product_id.offer.percentage / 100);
             
                                      }
                                       %>
                        
                <div class="card mb-4" id="reload">
                    
                    <div class="card-body">
                        <div class="row">
                        <div class="col-md-2">
                            <img src="<%= orderItem.product_id.images[0] %>" alt="<%= orderItem.product_id.name %>" class="img-fluid" style="max-width: 100%;">
                            </div>
                        <div class="col-md-6">
                            <div class="table-responsive">
                                <div>
                            <p><strong>Product:</strong> <span class="fw-bold"><%= orderItem.product_id.brand %> - <%= orderItem.product_id.name %></span></p>
                            <p><strong>Price:</strong> <span class="fw-bold">â‚¹<%= itemPrice*orderItem.quantity %>.00</span></p>
                            <p><strong>Quantity:</strong> <span class="fw-bold"><%= orderItem.quantity %></span></p>
                            <p><strong>Ordered on:</strong> <span class="fw-bold"><%= order.date %></span></p>
                            <p><strong>Payment Method:</strong> <span class="fw-bold"><%= order.paymentMethod %></span></p>
                            
                            <% if(orderItem.status !== 'Cancelled'){ %>
                                <p><strong>Current Status:</strong> <span class="fw-bold"><%= orderItem.status %></span></p>
                            <!-- <p><strong>Delivery Expected on :</strong> <span class="fw-bold"><%= order.expectedDelivery %></span></p> -->
                            <% } %>
                        </div>
                        
                        
                        <% if(orderItem.status !== 'Cancelled'){ %>
                        <!-- Form to change order status -->
                        <form action="" method="POST">
                            <label for="status">Status:</label>
                            <select name="status" id="status">
                                <option value="">Select...</option>
                                <option value="placed">Placed</option>
                                <option value="processing">Processing</option>
                                <option value="shipped">Shipped</option>
                                <option value="delivered">Delivered</option>
                                <option value="Cancelled">Cancel</option>
                            </select>
                            <button type="submit" onclick="updateStatus(event,'<%= order._id %>','<%= orderItem._id %>')">Update Status</button>
                            <p id="statusError" style="color: red;"></p>
                        </form>
                        <% }else{ %>
                            <p><strong>Status :</strong> <span class="fw-bold" style="color: red;"><%= orderItem.status %></span></p>
                        <% } %>
                        <!-- table-responsive //end -->
                        </div>
                        
                    </div>
                    <div class="col-md-3">
                        <p><strong>Shipping Address: </strong></p>
                        
                        
                        <p class="fw-bold"><%= order.deliveryAddress.name %></p>
                        <P class="fw-bold"><%= order.deliveryAddress.localAddress %></p>
                        <span class="fw-bold"><%= order.deliveryAddress.city %>,</span>
                        <span class="fw-bold"><%= order.deliveryAddress.state %></span>
                        <p class="fw-bold"><%= order.deliveryAddress.phone %></p>
                        <p class="fw-bold"><%= order.deliveryAddress.email %></p>
                        <p class="fw-bold"><%= order.deliveryAddress.pincode %></p>
                        
                        </div>
                    
                </div>
                
                    </div>
                    
                    </div>

                    <% if(orderItem.length>0){ %>
                        <div class="pagination-area mt-15 mb-50">
                            <nav aria-label="Page navigation example">
                                <ul class="pagination justify-content-start">
                                    <li class="page-item active"><a class="page-link" href="#">01</a></li>
                                    <li class="page-item"><a class="page-link" href="#">02</a></li>
                                    <li class="page-item"><a class="page-link" href="#">03</a></li>
                                    <li class="page-item"><a class="page-link dot" href="#">...</a></li>
                                    <li class="page-item"><a class="page-link" href="#">16</a></li>
                                    <li class="page-item">
                                        <a class="page-link" href="#"><i class="material-icons md-chevron_right"></i></a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                   <% } %>
                    



                    
                    <% }) %>
                    <% } %>
                    
                <!-- card end// -->
               
